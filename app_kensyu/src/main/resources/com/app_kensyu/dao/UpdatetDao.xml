<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app_kensyu.dao.UpdatetDao">

    <update id="updatetTemployeeTbl" parameterType="com.app_kensyu.entity.TemployeeEntity">
        UPDATE rpcDB.TEMPLOYEE_TBL
        <set>
            <if test="name != null">NAME=#{name},</if>
            <if test="sex != null">SEX=#{sex},</if>
            <if test="birthday != null">BIRTHDAY=#{birthday},</if>
            <if test="zip != null">ZIP=#{zip},</if>
            <if test="address1 != null">ADDRESS1=#{address1},</if>
            <if test="address2 != null">ADDRESS2=#{address2},</if>
            <if test="nyushaym != null">NYUSHAYM=#{nyushaym},</if>
            <if test="division != null">DIVISION=#{division},</if>
            <if test="hobby1 != null">HOBBY1=#{hobby1},</if>
            <if test="hobby2 != null">HOBBY2=#{hobby2},</if>
            <if test="hobby3 != null">HOBBY3=#{hobby3},</if>
            <if test="selfIntro != null">SELF_INTRO=#{selfIntro}</if>
        </set>
        WHERE ID=#{id}
    </update>

    <update id="updatetTcarerrTbl" parameterType="com.app_kensyu.entity.TcareerEntity">
        <selectKey keyProperty="seq" resultType="long" order="BEFORE">
            SELECT SEQ FROM rpcDB.TCAREER_TBL WHERE ID=#{id};
        </selectKey>
        UPDATE rpcDB.TCAREER_TBL
        <set>
            <if test="startDate != null and startDate != ''">START_DATE=#{startDate},</if>
            <if test="endDate != null and endDate != ''">END_DATE=#{endDate},</if>
            <if test="proposition != null and proposition != ''">PROPOSITION=#{proposition}</if>
        </set>
        WHERE ID=#{id} AND SEQ=#{seq}
    </update>


</mapper>

